
@model APIEMAIL.Models.Pessoa


<div class="modal-header">
    <h5 class="modal-title">Excluir Pessoa</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
    <input type="hidden" asp-for="Id" />
    <div class="mb-4">
        <label>Nome</label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="mb-4">
        <label>Função</label>
        <input asp-for="Funcao" class="form-control" />
    </div>
    <div class="mb-4">
        <label>Salário</label>
        <input asp-for="Salario" class="form-control" />
    </div>
    <div class="mb-4">
        <label>Data de Nascimento</label>
        <input asp-for="DataNascimento" class="form-control" type="date" />
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    <button type="button" class="btn btn-primary" onclick="ExcluirPessoa(@Model.Id)">Excluir</button>
</div>

